<div class="main-board-container">
<h1>General Assembly Search Engine</h1>
<p>
  <%= link_to "Create a New Prospect Card", new_prospect_card_path, class: "btn btn-primary"  %> |
  <%= link_to 'Create a New Recruiter Card', new_recruiter_card_path, class: "btn btn-primary" %>
</p>

<% @prospect_cards.each do |card| %>
<div class="prospect-card" data-id=<%= card.id %>>
    <div class="card-header">
      <img src="<%= card.user_img %>">
      <strong><%= card.name %></strong>
    </div>IS A
    <div class="card-text">
      <%= card.title %>
    </div>
      <p>LOOKING FOR A...</p>
    <div class="card-text">
      <%= card.looking_for %>
    </div>
      <p>SO I CAN HELP...</p>
    <div class="card-text">
      <%= card.description %>
    </div></br>
  <div class="card-buttons">
    <% if card.user_id == current_user.id %>
      <%= link_to 'Delete', "/prospect_cards/#{card.id}", class: "delete-pcard btn btn-danger", method: :delete %>
      <%= link_to 'Edit', edit_prospect_card_path(card.id), class: "edit-pcard btn btn-success", method: :get %>
    <% else %>
      <%= link_to 'Like', prospect_card_like_path(card.id), method: :post %>
    <% end %>
  </div>
</div>
<% end %>

<% @recruiter_cards.each do |card| %>
<div class="recruiter-card" data-id=<%= card.id %>>
    <div class="card-header">
      <img src="<%= card.user_img %>">
      <strong><%= card.name %></strong>
    </div>IS A
    <div class="card-text">
      <%= card.title %>
    </div>
      <p>LOOKING FOR A...</p>
    <div class="card-text">
      <%= card.looking_for %>
    </div>
      <p>TO HELP WITH...</p>
    <div class="card-text">
      <%= card.description %>
    </div></br>
  <div class="card-buttons">
    <% if card.user_id == current_user.id %>
      <%= link_to 'Delete', "/recruiter_cards/#{card.id}", class: "delete-rcard btn btn-danger", method: :delete %>
      <%= link_to 'Edit', edit_recruiter_card_path(card.id), class: "edit-rcard btn btn-success", method: :get %>
    <% else %>
      <%= link_to 'Like', recruiter_card_like_path(card.id), method: :post %>
    <% end %>
  </div>
</div>
<% end %>
</div>







