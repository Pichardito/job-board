<div id="user_nav">

  <% if current_user %>

    <% if current_user.uid %>
      <img src="<%= current_user.linkedin_profile_img %>">
      Signed in as <%= current_user.name %>: <%= current_user.linkedin_email %>
    <% else %>
      Signed in as <%= current_user.name %>: <%= current_user.email %>
    <% end %>

    <%= link_to 'Sign out', logout_path, id: 'logout', method: :delete %>

  <% else %>
    <%= link_to 'Login', login_path %>
    <%= link_to 'Sign up', signup_path %>
  <% end %>
</div>
