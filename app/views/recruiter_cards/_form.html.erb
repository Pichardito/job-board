<%= form_for @recruiter_card do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :looking_for %>
  <%= f.text_field :looking_for %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <%= f.submit 'Post this card'%>
<% end %>
